<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mcomic.com.mcomic">

    <!--android:largeHeap="true" Warning-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="mcomic.com.view.activity.LoadContentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--android:screenOrientation="portrait"-->
        <activity
            android:name="mcomic.com.view.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="mcomic.com.view.activity.fragment.ScreenSlidePagerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

    <!-- android:icon="@mipmap/ic_launcher" -->
    <!-- android:configChanges="orientation|keyboardHidden" -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
